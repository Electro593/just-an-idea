{
  "name": "just-an-idea",
  "displayName": "Just an Idea",
  "description": "Language support for the Jai language",
  "author": "Electro_593",
  "version": "0.0.2",
  "publisher": "electro593",
  "repository": {
    "type": "git",
    "url": "https://github.com/Electro593/just-an-idea.git"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "jai",
        "extensions": [
          ".jai"
        ],
        "aliases": [
          "Jai"
        ],
        "icon": {
          "light": "./icons/jai-light.png",
          "dark": "./icons/jai-dark.png"
        },
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "configuration": [
      {
        "title": "Just an Idea",
        "properties": {
          "justAnIdea.jaiPath": {
            "order": 1,
            "type": "string",
            "default": "jai",
            "description": "The location of the jai compiler executable. Defaults to assuming it's on the path."
          },
          "justAnIdea.buildFile": {
            "order": 2,
            "type": "string",
            "description": "The top-level file of your project. Will be built with a custom metaprogram to generate syntax info.",
            "ignoreSync": true
          },
          "justAnIdea.buildArgs": {
            "order": 3,
            "type": "array",
            "description": "Arguments to pass to your program while it's being built. This is useful if you need to disable certain features in your metaprogram.",
            "default": [],
            "ignoreSync": true
          }
        }
      }
    ],
    "grammars": [
      {
        "language": "jai",
        "scopeName": "source.jai",
        "path": "./syntaxes/jai.tmLanguage.json"
      }
    ]
  },
  "files": [
    "icons/**",
    "syntaxes/**",
    "server/src/modules/**",
    "out/extension.js",
    "out/server.exe",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "esbuild": "esbuild ./client/src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "compile": "yarn install && yarn esbuild && jai server/src/server.jai",
    "package": "yarn compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "@types/vscode": "^1.89.0",
    "@vscode/vsce": "^2.24.0",
    "esbuild": "^0.21.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}

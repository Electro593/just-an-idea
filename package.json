{
  "name": "just-an-idea",
  "displayName": "Just an Idea",
  "description": "Language support for the Jai language",
  "author": "Electro_593",
  "version": "0.0.1",
  "publisher": "electro593",
  "repository": {
    "type": "git",
    "url": "https://github.com/Electro593/just-an-idea.git"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "jai",
        "extensions": [
          ".jai"
        ],
        "aliases": [
          "Jai"
        ],
        "icon": {
          "light": "./icons/jai-light.png",
          "dark": "./icons/jai-dark.png"
        },
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "configuration": [
      {
        "title": "Just an Idea",
        "properties": {
          "just-an-idea.jaiPath": {
            "type": "string",
            "default": "jai",
            "description": "The location of the jai compiler executable."
          }
        }
      }
    ],
    "grammars": [
      {
        "language": "jai",
        "scopeName": "source.jai",
        "path": "./syntaxes/iain.tmLanguage.json",
        "_path": "./syntaxes/jai.tmLanguage.json"
      }
    ]
  },
  "files": [
    "icons/**",
    "syntaxes/**",
    "server/src/modules/**",
    "out/extension.js",
    "out/server.exe",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "esbuild": "esbuild ./client/src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "compile": "yarn esbuild && jai server/src/server.jai",
    "package": "yarn compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "@types/vscode": "^1.89.0",
    "@vscode/vsce": "^2.24.0",
    "esbuild": "^0.21.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}

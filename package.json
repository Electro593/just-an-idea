{
  "name": "just-an-idea",
  "displayName": "Just an Idea",
  "description": "Language support for the Jai language",
  "version": "0.0.1",
  "publisher": "electro593",
  "repository": "https://github.com/Electro593/just-an-idea.git",
  "license": "Unlicense",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jai",
        "extensions": [
          ".jai"
        ],
        "aliases": [
          "Jai"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "configuration": [
      {
        "title": "Just an Idea",
        "properties": {
          "just-an-idea.jaiPath": {
            "type": "string",
            "default": "jai",
            "description": "The location of the jai compiler executable."
          }
        }
      }
    ],
    "__grammars": [
      {
        "language": "jai",
        "scopeName": "source.jai",
        "path": "./syntaxes/jai.tmLanguage.json"
      }
    ],
    "grammars": [
      {
        "language": "jai",
        "scopeName": "source.jai",
        "path": "./syntaxes/iain.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
